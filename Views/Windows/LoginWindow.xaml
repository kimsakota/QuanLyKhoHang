<Window x:Class="UiDesktopApp1.Views.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:beh="clr-namespace:UiDesktopApp1.Behaviors"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:UiDesktopApp1.Views.Windows" xmlns:windows="clr-namespace:UiDesktopApp1.ViewModels.Windows" d:DataContext="{d:DesignInstance Type=windows:LoginViewModel}"
                 mc:Ignorable="d"
        Title="LoginWindow" Height="550" Width="600"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        
        MouseDown="Window_MouseDown">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>

            <beh:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter" />
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <beh:InverseBooleanConverter x:Key="InverseBooleanConverter" />

        </ResourceDictionary>
    </Window.Resources>
    <Border CornerRadius="12" BorderBrush="#8A16C1" BorderThickness="1">
        <Border.Background>
            <ImageBrush ImageSource="/Assets/Images/Backgrounds/back_image.jpg" Stretch="UniformToFill" Opacity="0.3"/>
        </Border.Background>

        <Border CornerRadius="10" Opacity="0.95">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#060531" Offset="0"/>
                    <GradientStop Color="#1B1448" Offset="0.8"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid Margin="40" Opacity="{Binding IsLoggingIn, Converter={StaticResource InverseBooleanConverter}, ConverterParameter=0.5, FallbackValue=1.0}"
                      IsEnabled="{Binding IsLoggingIn, Converter={StaticResource InverseBooleanConverter}, FallbackValue=True}">

                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

                        <Image Source="/Assets/Images/Logos/logo.png"
                               Width="150" Height="Auto" Margin="0,0,0,10"
                               Stretch="Uniform"/>
                        <TextBlock Text="QUẢN LÝ KHO"
                                   Foreground="White" FontSize="28" FontWeight="Medium"
                                   FontFamily="Segoe UI Semibold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Đăng nhập để tiếp tục" Opacity="0.7"
                                   Foreground="LightGray" FontSize="14" FontWeight="Normal"
                                   FontFamily="Segoe UI" HorizontalAlignment="Center" Margin="0,5,0,25"/>

                        <TextBlock Text="Tài khoản" Foreground="DarkGray" FontSize="12" FontWeight="Medium"
                                   FontFamily="Segoe UI" Margin="0,15,0,0"/>
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <ui:SymbolIcon Symbol="Person16" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ui:TextBox Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        PlaceholderText="Nhập tài khoản" Grid.Column="1"/>
                        </Grid>

                        <TextBlock Text="Mật khẩu" Foreground="DarkGray" FontSize="12" FontWeight="Medium"
                                   FontFamily="Segoe UI" Margin="0,15,0,0"/>
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <ui:SymbolIcon Symbol="Password16" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ui:PasswordBox x:Name="PasswordBox"
                                            PlaceholderText="Nhập mật khẩu"
                                            Grid.Column="1"
                                            PasswordChanged="PasswordBox_PasswordChanged"/>
                        </Grid>

                        <TextBlock Text="{Binding ErrorMessage}" Foreground="#FF6969" FontSize="12" Margin="0,10,0,0" TextWrapping="Wrap"
                                   Visibility="{Binding ErrorMessage, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>

                        <ui:Button Appearance="Primary" Content="ĐĂNG NHẬP"
                                   Foreground="White" FontSize="14" FontWeight="SemiBold"
                                   Width="Auto" MinWidth="150" Height="40" Padding="30, 0"
                                   CornerRadius="20" Cursor="Hand" Margin="0,30,0,0"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Command="{Binding LoginCommand}" />
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0" Opacity="0.6">
                            <TextBlock Text="Quên mật khẩu?" Foreground="DarkGray" FontSize="12" FontWeight="Medium" FontFamily="Segoe UI"/>
                            <TextBlock Text="Đặt lại" Foreground="White" FontSize="12" FontWeight="Medium" FontFamily="Segoe UI" Cursor="Hand" Margin="5,0,0,0" />
                        </StackPanel>

                    </StackPanel>
                </Grid>
                <ui:ProgressRing IsIndeterminate="True" Width="40" Height="40"
                                 VerticalAlignment="Center" HorizontalAlignment="Center"
                                 Visibility="{Binding IsLoggingIn, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}"/>

                <Button VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10" Background="Transparent" BorderThickness="0" Foreground="Gray" Width="25" Height="25" Cursor="Hand"
                         Click="CloseButton_Click">
                    <ui:SymbolIcon Symbol="Dismiss24" FontSize="16"/>
                </Button>

            </Grid>
        </Border>
    </Border>
</Window>
